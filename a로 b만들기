import java.util.*;
class Solution {
    public int solution(String before, String after) {
        int answer = 0;
        char[] bef = before.toCharArray();
        char[] af = after.toCharArray();
        
        Arrays.sort(bef);
        Arrays.sort(af);
        
        if(Arrays.equals(bef,af)){
            answer = 1;
    
        }
        else{
            answer = 0;
        }
        return answer;
    }
}
