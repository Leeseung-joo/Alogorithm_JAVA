class Solution {
    public int solution(int[] common) {
        int a = 0;
        int answer = 0;
        if(common[1]-common[0] == common[2]-common[1]){
            a = common[2]-common[1];
            answer = common[common.length-1] + a;
    }
        else{
            a = common[1] / common[0];
            answer = common[common.length-1]*a;
        }
    return answer;
}
}
